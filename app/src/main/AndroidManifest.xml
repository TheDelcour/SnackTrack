<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aau.student.meab220.snacktrack">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/snacktracklogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/snacktracklogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SnackScreen"
            android:label="@string/title_activity_snack_screen"
            android:theme="@style/AppTheme" />
        <activity android:name=".SnackSubCategory" />
        <activity android:name=".TrackScreen"></activity>
    </application>

</manifest>